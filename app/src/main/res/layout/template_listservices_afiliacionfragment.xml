<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_template_newservice"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/brigde_golden" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingStart="10dp"
            >
            <TextView
                android:id="@+id/title_template_service_afiliacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="Servicio de gasfiterÃ­a"
                android:textColor="@color/Negro"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/categoria_template_service_afiliacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title_template_service_afiliacion"
                android:text="Categoria"
                android:textColor="@color/Negro"/>
            <TextView
                android:id="@+id/categoria_template_service_afiliacion_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/categoria_template_service_afiliacion"
                android:layout_below="@+id/title_template_service_afiliacion"
                android:text="10/06/2020" />
            <TextView
                android:id="@+id/costo_template_service_afiliacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/categoria_template_service_afiliacion"
                android:text="Costos:"
                android:textColor="@color/Negro"/>
            <TextView
                android:id="@+id/costo_template_service_afiliacion_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/costo_template_service_afiliacion"
                android:layout_below="@+id/categoria_template_service_afiliacion"
                android:text="luisbrunetti777" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#BDBCBC">

    </View>
    

</LinearLayout>